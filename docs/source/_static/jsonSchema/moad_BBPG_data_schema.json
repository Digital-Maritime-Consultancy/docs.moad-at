{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Bounding Box/Polygon annotation for MOAD project",
    "description": "기하학 라벨링 데이터 형식",
    "default": {},
    "required": [
        "annotations",
        "categories"
    ],
    "properties": {
        "annotations": {
            "$id": "#/properties/annotations",
            "type": "array",
            "title": "The annotations schema",
            "description": "",
            "default": [],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/annotations/items",
                "anyOf": [
                    {
                        "$id": "#/properties/annotations/items/anyOf/0",
                        "type": "object",
                        "title": "Geometric annotation",
                        "description": "",
                        "default": {},
                        "examples": [
                            {
                                "id": 1768,
                                "image_id": 3231444,
                                "category_id": 3,
                                "type": "boundingbox",
                                "segmentation": [
                                    [
                                        38.65,
                                        28.67,
                                        138.65,
                                        28.67,
                                        138.65,
                                        128.67,
                                        38.65,
                                        128.67
                                    ]
                                ],
                                "properties": {
                                    "ship-type": "fishing boat"
                                },
                                "area": 10000,
                                "bbox": [
                                    38.65,
                                    28.67,
                                    100,
                                    100
                                ],
                                "isobscured": 0,
                                "istruncated": 0,
                                "risk": "safe"
                            }
                        ],
                        "required": [
                            "id",
                            "image_id",
                            "category_id",
                            "type",
                            "segmentation",
                            "properties",
                            "area",
                            "bbox",
                            "isobscured",
                            "istruncated",
                            "risk"
                        ],
                        "properties": {
                            "id": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/id",
                                "type": "integer",
                                "title": "고유 식별 번호",
                                "description": "",
                                "default": 0,
                                "examples": [
                                    1768
                                ]
                            },
                            "image_id": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/image_id",
                                "type": "integer",
                                "title": "라벨링이 수행 된 소스 이미지 아이디",
                                "description": "",
                                "default": 0,
                                "examples": [
                                    3231444
                                ]
                            },
                            "category_id": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/category_id",
                                "type": "integer",
                                "title": "라벨링 값",
                                "description": "",
                                "default": 0,
                                "examples": [
                                    3
                                ]
                            },
                            "type": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/type",
                                "type": "string",
                                "enum": ["boundingbox", "polygon", "polyline"],
                                "title": "표현 형식",
                                "description": "",
                                "default": "",
                                "examples": [
                                    "boundingbox"
                                ]
                            },
                            "segmentation": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/segmentation",
                                "type": "array",
                                "title": "꼭지점 위치",
                                "description": "",
                                "default": [],
                                "examples": [
                                    [
                                        [
                                            38.65,
                                            28.67,
                                            138.65,
                                            28.67,
                                            138.65,
                                            128.67,
                                            38.65,
                                            128.67
                                        ]
                                    ]
                                ],
                                "additionalItems": true,
                                "items": {
                                    "$id": "#/properties/annotations/items/anyOf/0/properties/segmentation/items",
                                    "anyOf": [
                                        {
                                            "$id": "#/properties/annotations/items/anyOf/0/properties/segmentation/items/anyOf/0",
                                            "type": "array",
                                            "title": "x and y coordinates of polygon points",
                                            "description": "",
                                            "default": [],
                                            "examples": [
                                                [
                                                    38.65,
                                                    28.67
                                                ]
                                            ]
                                        }
                                    ]
                                }
                            },
                            "properties": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/properties",
                                "type": "object",
                                "title": "세부 속성",
                                "description": "",
                                "default": {},
                                "examples": [
                                    {
                                        "ship-type": "fishing boat"
                                    }
                                ],
                                "required": [
                                    "ship-type"
                                ],
                                "properties": {
                                    "ship-type": {
                                        "$id": "#/properties/annotations/items/anyOf/0/properties/properties/properties/ship-type",
                                        "type": "string",
                                        "title": "The ship-type schema",
                                        "description": "",
                                        "default": "",
                                        "examples": [
                                            "fishing boat"
                                        ]
                                    }
                                },
                                "additionalProperties": true
                            },
                            "area": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/area",
                                "type": "integer",
                                "title": "면적",
                                "description": "",
                                "default": 0,
                                "examples": [
                                    10000
                                ]
                            },
                            "bbox": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/bbox",
                                "type": "array",
                                "title": "바운딩 박스",
                                "description": "x and y coord of starting point, then width and height",
                                "default": [],
                                "examples": [
                                    [
                                      38.65,
                                      28.67,
                                      100,
                                      100
                                    ]
                                ],
                                "additionalItems": true
                            },
                            "isobscured": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/isobscured",
                                "type": "integer",
                                "enum": [0, 1],
                                "title": "가려짐 여부",
                                "description": "",
                                "default": 0,
                                "examples": [
                                    0
                                ]
                            },
                            "istruncated": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/istruncated",
                                "type": "integer",
                                "enum": [0, 1],
                                "title": "잘림 여부",
                                "description": "",
                                "default": 0,
                                "examples": [
                                    0
                                ]
                            },
                            "risk": {
                                "$id": "#/properties/annotations/items/anyOf/0/properties/risk",
                                "type": "string",
                                "enum": ["danger", "caution", "safe"],
                                "title": "위험 수준",
                                "description": "",
                                "default": "safe",
                                "examples": [
                                    "safe"
                                ]
                            }
                        },
                        "additionalProperties": true
                    }
                ]
            }
        },
        "categories": {
            "$id": "#/properties/categories",
            "type": "array",
            "title": "사용된 객체 정보",
            "description": "",
            "default": [],
            "examples": [
                [
                    {
                        "supercategory": "environment",
                        "id": 1,
                        "category": "sky",
                        "name": "sky"
                    },
                    {
                        "supercategory": "object",
                        "id": 2,
                        "category": "vessel",
                        "name": "fishing"
                    }
                ]
            ],
            "additionalItems": true,
            "items": {
                "$id": "#/properties/categories/items",
                "anyOf": [
                    {
                        "$id": "#/properties/categories/items/anyOf/0",
                        "type": "object",
                        "title": "객체 정보",
                        "description": "",
                        "default": {},
                        "examples": [
                            {
                                "supercategory": "environment",
                                "id": 1,
                                "category": "sky",
                                "name": "sky"
                            }
                        ],
                        "required": [
                            "supercategory",
                            "id",
                            "category",
                            "name"
                        ],
                        "properties": {
                            "id": {
                                "$id": "#/properties/categories/items/anyOf/0/properties/id",
                                "type": "integer",
                                "title": "고유 식별 번호",
                                "description": "",
                                "default": 0,
                                "examples": [
                                    1
                                ]
                            },
                            "supercategory": {
                                "$id": "#/properties/categories/items/anyOf/0/properties/supercategory",
                                "type": "string",
                                "title": "대분류",
                                "enum": ["환경", "객체"],
                                "description": "",
                                "default": "",
                                "examples": [
                                    "환경"
                                ]
                            },
                            "category": {
                                "$id": "#/properties/categories/items/anyOf/0/properties/category",
                                "type": "string",
                                "title": "중분류",
                                "enum": ["바다", "수평선", "섬", "하늘", "해안선", "구름", "방파제", "해상 풍력", "부두", "등대", "선박", "부표", "암초", "기타 부유물"],
                                "description": "",
                                "default": "",
                                "examples": [
                                    "하늘"
                                ]
                            },
                            "name": {
                                "$id": "#/properties/categories/items/anyOf/0/properties/name",
                                "type": "string",
                                "enum": ["바다", "수평선", "섬", "하늘", "해안선", "구름", "방파제", "해상 풍력", "부두", "등대", "액화물선", "건화물선", "여객선", "군함", "어선", "레저선", "예인선", "부선", "작업선", "관공선", "특수작업선", "측방표지", "방위표지", "안전수역표지", "지향등", "등대", "등표", "중요부표지", "암초", "기타 부유물"],
                                "title": "소분류",
                                "description": "",
                                "default": "",
                                "examples": [
                                    "하늘"
                                ]
                            }
                        },
                        "additionalProperties": false
                    }
                ]
            }
        }
    },
    "additionalProperties": false
}
